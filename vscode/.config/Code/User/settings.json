{
  /***************************************************************************
   * TELEMETRY                                                               *
   ***************************************************************************/
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  /***************************************************************************
   * STATUS INFO                                                             *
   ***************************************************************************/
  "editor.lineNumbers": "on",
  /***************************************************************************
   * VIM EXTENSION                                                           *
   ***************************************************************************/
  "vim.leader": "<space>",
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": false,
  "vim.useCtrlKeys": true,
  "vim.easymotion": true,
  "vim.textwidth": 80,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "e",
        "v"
      ],
      "commands": [
        ":edit ~/.config/Code/User/settings.json"
      ]
    }
  ],
  /***************************************************************************
   * WORKBENCH                                                               *
   ***************************************************************************/
  "workbench.startupEditor": "welcomePage",
  "workbench.settings.useSplitJSON": false,
  /***************************************************************************
   * MONOSPACED FONTS                                                        *
   ***************************************************************************/
  // Dejavu Sans Mono
  // Menlo
  // Meslo
  // Ubuntu Mono
  // Consolas
  // Inconsolata
  // Source Code Pro
  // Fira Code
  // Monaco
  // JetBrains Mono
  /***************************************************************************
   * EDITOR FONT                                                             *
   ***************************************************************************/
  "editor.fontFamily": "Dejavu Sans Mono",
  "editor.fontSize": 17,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": false,
  "editor.lineHeight": 0,
  /***************************************************************************
   * TERMINAL FONT                                                           *
   ***************************************************************************/
  "terminal.integrated.fontFamily": "Dejavu Sans Mono",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 0,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  /***************************************************************************
   * INDENTATION                                                             *
   ***************************************************************************/
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.autoIndent": "advanced",
  /***************************************************************************
   * AUTO COMPLETION                                                         *
   ***************************************************************************/
  "editor.wordBasedSuggestions": true,
  "editor.suggest.insertMode": "replace",
  "editor.linkedEditing": true,
  /***************************************************************************
   * LINE WRAPPING                                                           *
   ***************************************************************************/
  "editor.rulers": [
    80,
    120
  ],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "none",
  // the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog the quick brown fox jumped over the lazy dog
  /***************************************************************************
   * FORMATTING                                                              *
   ***************************************************************************/
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.trimAutoWhitespace": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  /***************************************************************************
   * PRETTIER EXTENSION                                                      *
   ***************************************************************************/
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": false,
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 120,
  /***************************************************************************
   * BRACKET PAIR COLORIZER 2 EXTENSION                                      *
   ***************************************************************************/
  "bracket-pair-colorizer-2.colors": [
    "Gold", //
    "Orchid",
    "LightSkyBlue"
  ],
  "bracket-pair-colorizer-2.colorMode": "Consecutive",
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
  /***************************************************************************
   * JS                                                                      *
   ***************************************************************************/
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120
  },
  /***************************************************************************
   * JSON                                                                   *
   ***************************************************************************/
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120
  },
  /***************************************************************************
   * JSON WITH COMMENTS                                                      *
   ***************************************************************************/
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120
  },
  /***************************************************************************
   * TS                                                                      *
   ***************************************************************************/
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120
  },
  /***************************************************************************
   * HTML                                                                    *
   ***************************************************************************/
  "[html]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120,
    "editor.linkedEditing": true
  },
  "html.suggest.html5": true,
  "html.autoClosingTags": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  /***************************************************************************
   * CSS                                                                     *
   ***************************************************************************/
  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 120
  },
  /***************************************************************************
   * PYTHON                                                                 *
   ***************************************************************************/
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "ms-python.python"
  },
  /***************************************************************************
   * SHELL SCRIPT                                                          *
   ***************************************************************************/
  "[shellscript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.suggest.insertMode": "replace",
  },
  /***************************************************************************
   * C / C++                                                                *
   ***************************************************************************/
  "C_Cpp.intelliSenseEngine": "Default",
  "C_Cpp.enhancedColorization": "Enabled",
  "C_Cpp.loggingLevel": "Information",
  //"C_Cpp.clang_format_path": "/usr/bin/clang-format",
  "C_Cpp.intelliSenseEngineFallback": "Enabled",
  //"C_Cpp.clang_format_fallbackStyle": "LLVM",
  "C_Cpp.updateChannel": "Insiders",
  //
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  //
  "[c]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  // Apply C/C++ settings to *.cu files
  "files.associations": {
    "*.cu": "cpp"
  },
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  "liveshare.languages.allowGuestCommandControl": true,
  "code-runner.executorMap": {
    "python": "python3"
  },
  "window.zoomLevel": 0,
  "workbench.iconTheme": "vscode-icons",
  "debug.allowBreakpointsEverywhere": true,
  "workbench.colorTheme": "One Dark Pro",
}